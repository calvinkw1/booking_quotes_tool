<%= form_with(model: inquiry, local: true) do |form| %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
      <% inquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :inquirer_name %>
    <p>
      <%= form.text_field :inquirer_name, required: true, placeholder: "Steph Curry" %>
    </p>
  </div>

  <div class="field">
    <%= form.label :inquirer_email %>
    <p>
      <%= form.text_field :inquirer_email, required: true, placeholder: "example@sonder.com" %>
    </p>
  </div>

  <div class="field">
    <%= form.label :inquirer_phone %>
    <p>
      <%= form.text_field :inquirer_phone, required: true, placeholder: "415-555-5555" %>
    </p>
  </div>

  <div class="field">
    <%= form.label :check_in %>
    <p>
      <%= form.date_field :check_in, id: :inquiry_check_in, selected: l(Date.today), min: l(Date.today), required: true %>
    </p>
  </div>

  <div class="field">
    <%= form.label :check_out %>
    <p>
      <%= form.date_field :check_out, id: :inquiry_check_out, default: l(Date.today + 1), min: l(Date.today + 1), required: true %>
    </p>
  </div>

  <div class="field">
    <%= form.label :adults %>
    <p>
      <%= form.select :adults, (1..10).map {|i| [i,i]}, id: :inquiry_adults, required: true %>
    </p>
  </div>

  <div class="field">
    <%= form.label :children %>
    <p>
      <%= form.select :children, (0..10).map {|i| [i,i]}, id: :inquiry_children %>
    </p>
  </div>

  <div class="field">
    <%= form.label :pets %>
    <p>
      <%= form.select :pets, (0..5).map {|i| [i,i]}, id: :inquiry_pets %>
    </p>
  </div>

  <div class="field">
    <%= form.label "Select a unit:" %>
      <% @units.each do |unit| %>
        <p>
          <%= form.radio_button :unit_id, unit.id, required: true %>
          <%= form.label :unit_id, unit.ad_name %>
        </p>
      <% end %>
  </div>

    <div class="field">
    <%= form.label :rental_site %>
    <p>
      <%= form.select :rental_site, ["Booking.com", "Bookit.com", "Expedia", "Hotels.com", "Sonder", "Travelocity", "Tripadvisor", "Tripping", "Trivago", "Other"], { include_blank: true }, id: :inquiry_rental_site %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
