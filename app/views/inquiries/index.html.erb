<p id="notice"><%= notice %></p>

<h1>Inquiries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Unit Name</th>
      <th>Check In Date</th>
      <th>Check Out Date</th>
      <th>Nights</th>
      <th>Adults</th>
      <th>Children</th>
      <th>Pets</th>
      <th>Price</th>
      <th>Tax</th>
      <th>Rental site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.unit.ad_name %></td>
        <td><%= inquiry.check_in %></td>
        <td><%= inquiry.check_out %></td>
        <td><%= inquiry.nights %></td>
        <td><%= inquiry.adults %></td>
        <td><%= inquiry.children %></td>
        <td><%= inquiry.pets %></td>
        <td><%= inquiry.price %></td>
        <td><%= inquiry.tax %></td>
        <td><%= inquiry.rental_site %></td>
        <td><%= link_to 'Show', inquiry %></td>
        <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
        <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

