<p id="notice"><%= notice %></p>

<h1>Inquiries</h1>
<p><%= button_to 'New Inquiry', new_inquiry_path, method: :get %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Unit Name</th>
      <th>Check In Date</th>
      <th>Check Out Date</th>
      <th>Nights</th>
      <th>Adults</th>
      <th>Children</th>
      <th>Pets</th>
      <th>Price</th>
      <th>Tax</th>
      <th>Total</th>
      <th>Rental site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= link_to inquiry.unit.ad_name, inquiry_path(inquiry) %></td>
        <td><%= inquiry.check_in %></td>
        <td><%= inquiry.check_out %></td>
        <td><%= inquiry.nights %></td>
        <td><%= inquiry.adults %></td>
        <td><%= inquiry.children %></td>
        <td><%= inquiry.pets %></td>
        <td><%=h number_to_currency(inquiry.price) %></td>
        <td><%=h number_to_currency(inquiry.tax) %></td>
        <td><%=h number_to_currency(inquiry.price + inquiry.tax) %></td>
        <td><%= inquiry.rental_site %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
